import { test } from '@playwright/test';

test('test', async ({ page }) => {
  // Increase the timeout for page.goto
  await page.goto('https://www.orangehrm.com/', { timeout: 60000 });

  await page.getByRole('button', { name: 'Book a Free Demo' }).click();
  await page.getByPlaceholder('Your Full Name*').click();
  await page.getByPlaceholder('Your Full Name*').fill('sunil');
  await page.getByPlaceholder('Business Email*').click();
  await page.getByPlaceholder('Business Email*').fill('xyz@gmail.com');
  await page.getByPlaceholder('Company Name').click();
  await page.getByPlaceholder('Company Name').fill('cavssss');

  // Wait for the Country dropdown to be visible before selecting the option
  await page.waitForSelector('select[name="Form_getForm_Country"]', { state: 'visible' });

  await page.getByLabel('Country').selectOption('India');

  await page.getByPlaceholder('Phone Number*').click();
  await page.getByPlaceholder('Phone Number*').fill('7978487756');
  
  await page.getByRole('button', { name: 'Get a Free Demo' }).click();
});
