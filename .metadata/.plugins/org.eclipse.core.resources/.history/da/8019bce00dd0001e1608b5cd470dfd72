import java.time.Duration;
import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class OrangeTestNGClass {

    WebDriver driver;

    @BeforeClass
    public void setUp() {
        System.setProperty("webdriver.chrome.driver", "C:\\\\Users\\\\Sunil.Roul\\\\chromedriver_win32.exe");
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(5));
        driver.manage().window().maximize();
    }

    @Test
    public void executeTest() throws InterruptedException {
        driver.get("https://www.orangehrm.com/");
        Thread.sleep(2000);

        // Your existing script...

        driver.findElement(By.xpath("//div[@class='d-flex web-menu-btn']//li[1]//a[1]")).click();
        Thread.sleep(2000);
        driver.findElement(By.xpath("//input[@id='Form_getForm_FullName']")).sendKeys("Sunil");
        Thread.sleep(2000);
        driver.findElement(By.xpath("//input[@id='Form_getForm_Email']")).sendKeys("Sunil@gmail.com");
        Thread.sleep(2000);
        driver.findElement(By.xpath("//input[@id='Form_getForm_CompanyName']")).sendKeys("Cavsss");
        Select dropdown = new Select(driver.findElement(By.xpath("//select[@id='Form_getForm_Country']")));
        JavascriptExecutor js = (JavascriptExecutor) driver;
        js.executeScript("window.scrollBy(0,250)", "");
        Thread.sleep(2000);
        dropdown.selectByValue("India");
        driver.findElement(By.xpath("//input[@id='Form_getForm_Contact']")).sendKeys("7978487756");
        driver.findElement(By.xpath("//input[@id='Form_getForm_action_submitForm']")).click();
    }

    @AfterClass
    public void tearDown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
